{
  "manifest_version": 3,
  "name": "Flash Notes",
  "description": "A simple and efficient note-taking Chrome extension for quick thoughts and tasks.",
  "version": "1.2",
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Adnan Niaz",
  "offline_enabled": true,
  "background": {
    "service_worker": "background.js"
  }
}
